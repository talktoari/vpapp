<h1>Listing donors</h1>

<table id="donors">
  <tr>
    <th>Email</th>
    <th>Password</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Gender</th>
    <th>Date of Birth</th>
    <th>Address First Line</th>
    <th>Address Second Line</th>
    <th>Address Landmark</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Pincode</th>
    <th>Phone</th>
    <th>Mobile</th>
    <th>Comment</th>
    <th>Anonymous</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @donors.each do |donor| %>
  <tr>
    <td><%= donor.email %></td>
    <td><%= donor.password %></td>
    <td><%= donor.first_name %></td>
    <td><%= donor.last_name %></td>
    <td><%= donor.gender %></td>
    <td><%= donor.date_of_birth %></td>
    <td><%= donor.address_first_line %></td>
    <td><%= donor.address_second_line %></td>
    <td><%= donor.address_landmark %></td>
    <td><%= donor.city %></td>
    <td><%= donor.state %></td>
    <td><%= donor.country %></td>
    <td><%= donor.pincode %></td>
    <td><%= donor.phone %></td>
    <td><%= donor.mobile %></td>
    <td><%= donor.comment %></td>
    <td><%= donor.anonymous %></td>
    <td><%= link_to 'Show', donor %></td>
    <td><%= link_to 'Edit', edit_donor_path(donor) %></td>
    <td><%= link_to 'Destroy', donor, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

