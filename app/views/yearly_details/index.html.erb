<h1>Listing Yearly Details for All Students</h1>

<%= link_to 'Export to EXCEL', yearly_details_path(request.parameters.merge({:format => :xls})) %>

<hr />
<%= paginate @yearly_details %>
<hr />

<table id="donations">
  <tr>
  <% if current_user.role == "super_admin" %>
    <th>ID</th>
    <th>Student ID</th>
  <% end %>
    <th>Student Name</th>
    <th>Year</th>
    <th>Coll name</th>
    <th>Coll address line1</th>
    <th>Coll address line2</th>
    <th>Coll landmark</th>
    <th>Coll city</th>
    <th>Coll state</th>
    <th>Coll country</th>
    <th>Coll pincode</th>
    <th>Coll full address</th>
    <th>Coll primary phone</th>
    <th>Coll additional phone</th>
    <th>Result odd</th>
    <th>Result even</th>
    <th>Result aggregate</th>
    <th>Result year</th>
    <th>Course</th>
    <th>Stream</th>
    <th>Amount fees</th>
    <th>Amount donation</th>
    <th>Amount bus pass</th>
    <th>Amount add on</th>
    <th>Amount total</th>
    <th>Chalan number</th>
    <th>Vr number</th>
    <th>Books given</th>
    <th>Books given center</th>
    <th>Camp invited</th>
    <th>Camp attended</th>
    <th>Camp date</th>
    <th>Camp place</th>
    <th>Fac name</th>
    <th>Fac address line1</th>
    <th>Fac address line2</th>
    <th>Fac landmark</th>
    <th>Fac city</th>
    <th>Fac state</th>
    <th>Fac country</th>
    <th>Fac pincode</th>
