    <td><%= yearly_detail.vr_number %></td>
    <td><%= yearly_detail.books_given %></td>
    <td><%= yearly_detail.books_given_center %></td>
    <td><%= yearly_detail.camp_invited %></td>
    <td><%= yearly_detail.camp_attended %></td>
    <td><%= yearly_detail.camp_date %></td>
    <td><%= yearly_detail.camp_place %></td>
    <td><%= yearly_detail.fac_name %></td>
    <td><%= yearly_detail.fac_address_line1 %></td>
    <td><%= yearly_detail.fac_address_line2 %></td>
    <td><%= yearly_detail.fac_landmark %></td>
    <td><%= yearly_detail.fac_city %></td>
    <td><%= yearly_detail.fac_state %></td>
    <td><%= yearly_detail.fac_country %></td>
    <td><%= yearly_detail.fac_pincode %></td>
    <td><%= yearly_detail.fac_full_address %></td>
    <td><%= yearly_detail.fac_primary_phone %></td>
    <td><%= yearly_detail.fac_additional_phone %></td>
    <td><%= yearly_detail.letter1_sent %></td>
    <td><%= yearly_detail.letter2_sent %></td>
    <td><%= yearly_detail.comments %></td>
    <td>
      <%= link_to 'Edit', edit_yearly_detail_path(yearly_detail) %> |
      <%= link_to 'Destroy', yearly_detail, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

