    <th>Letter2 sent</th>
    <th>Comments</th>
    <th>Actions</th>
  </tr>

<% @yearly_details.each do |yearly_detail| %>
  <tr>
  <% if current_user.role == "super_admin" %>
    <td><%= yearly_detail.id %></td>
    <td><%= yearly_detail.student_id %></td>
  <% end %>
    <td><%= link_to "#{yearly_detail.student.first_name} #{yearly_detail.student.last_name}", yearly_detail.student %></td>
    <td><%= link_to "#{yearly_detail.year}", yearly_detail %></td>
    <td><%= yearly_detail.coll_name %></td>
    <td><%= yearly_detail.coll_address_line1 %></td>
    <td><%= yearly_detail.coll_address_line2 %></td>
    <td><%= yearly_detail.coll_landmark %></td>
    <td><%= yearly_detail.coll_city %></td>
    <td><%= yearly_detail.coll_state %></td>
    <td><%= yearly_detail.coll_country %></td>
    <td><%= yearly_detail.coll_pincode %></td>
    <td><%= yearly_detail.coll_full_address %></td>
    <td><%= yearly_detail.coll_primary_phone %></td>
    <td><%= yearly_detail.coll_additional_phone %></td>
    <td><%= yearly_detail.result_odd %></td>
    <td><%= yearly_detail.result_even %></td>
    <td><%= yearly_detail.result_aggregate %></td>
    <td><%= yearly_detail.result_year %></td>
    <td><%= yearly_detail.course %></td>
