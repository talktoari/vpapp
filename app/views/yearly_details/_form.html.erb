    </div>
    <div class="field">
      <%= f.label :coll_city %>
      <%= f.select(:coll_city, %w{Bangalore Dharwad Belgaum Mumbai Ranchi NewYork Beijing},
      		:prompt => "Select City", :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :coll_state %>
      <%= f.select(:coll_state, %w{Maharashtra Karnataka Bihar Charlotte Shanghai},
      		:prompt => "Select State", :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :coll_country %>
      <%= f.select(:coll_country, %w{India USA China},
      		:prompt => "Select Country", :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :coll_pincode %>
      <%= f.text_field :coll_pincode %>
    </div>
    <div class="field">
      <%= f.label "Full Address (Import Case)" %>
      <%= f.text_area :coll_full_address %>
    </div>
    <div class="field">
      <%= f.label :coll_primary_phone %>
      <%= f.text_field :coll_primary_phone %>
    </div>
    <div class="field">
      <%= f.label :coll_additional_phone %>
      <%= f.text_field :coll_additional_phone %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Facilitator Information</legend>
    <div class="field">
      <%= f.label :fac_name %>
      <%= f.text_field :fac_name %>
    </div>
    <div class="field">
      <%= f.label :fac_address_line1 %>
      <%= f.text_field :fac_address_line1 %>
    </div>
    <div class="field">
