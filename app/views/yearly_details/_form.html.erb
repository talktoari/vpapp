    </div>
    <div class="field">
      <%= f.label :fac_city %>
      <%= f.select(:fac_city, %w{Bangalore Dharwad Belgaum Mumbai Ranchi NewYork Beijing},
      		:prompt => "Select City", :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :fac_state %>
      <%= f.select(:fac_state, %w{Maharashtra Karnataka Bihar Charlotte Shanghai},
      		:prompt => "Select State", :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :fac_country %>
      <%= f.select(:fac_country, %w{India USA China},
      		:prompt => "Select Country", :include_blank => true) %>
    </div>
    <div class="field">
      <%= f.label :fac_pincode %>
      <%= f.text_field :fac_pincode %>
    </div>
    <div class="field">
      <%= f.label "Full Address (Import Case)" %>
      <%= f.text_area :fac_full_address %>
    </div>
    <div class="field">
      <%= f.label :fac_primary_phone %>
      <%= f.text_field :fac_primary_phone %>
    </div>
    <div class="field">
      <%= f.label :fac_additional_phone %>
      <%= f.text_field :fac_additional_phone %>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

