<h1>LISTING ALL STUDENTS INFORMATION</h1>

<%= link_to "Upload Students", upload_student_students_path %>

<%= link_to 'Export to EXCEL', students_path(request.parameters.merge({:format => :xls})) %>

<% if can? :create, Student %>
  <%= link_to 'Add New Student', new_student_path %>
<% end %>

<hr />
<%= paginate @students %>
<hr />

<table id="donations">
  <tr>
  <% if current_user.role == "super_admin" %>
    <th>Student ID</th>
  <% end %>
    <th>Name</th>
    <th>District</th>
    <th>Taluka</th>
    <th>VP ID</th>
    <th>Father name</th>
    <th>Date of birth</th>
    <th>Email</th>
    <th>Pmt address line1</th>
    <th>Pmt address line2</th>
    <th>Pmt landmark</th>
    <th>Pmt city</th>
    <th>Pmt state</th>
    <th>Pmt country</th>
    <th>Pmt pincode</th>
    <th>Pmt full address</th>
    <th>Cur address line1</th>
    <th>Cur address line2</th>
    <th>Cur landmark</th>
    <th>Cur city</th>
    <th>Cur state</th>
    <th>Cur country</th>
    <th>Cur pincode</th>
    <th>Cur full address</th>
    <th>Primary phone</th>
    <th>Additional phone</th>
    <th>Father occupation</th>
    <th>Mother occupation</th>
    <th>Total family income</th>
    <th>Gender</th>
    <th>Area type</th>
    <th>Caste</th>
    <th>Category</th>
    <th>Studied medium</th>
    <th>Sslc percentage</th>
    <th>Comments</th>
    <% if can? :update, Student %>
      <th>Actions</th>
    <% end %>
  </tr>

<% @students.each do |student| %>
  <tr>
  <% if current_user.role == "super_admin" %>
    <td><%= student.id %></td>
  <% end %>
    <td><%= link_to "#{student.first_name} #{student.last_name}", student %></td>
    <td><%= student.district %></td>
    <td><%= student.taluka %></td>
    <td><%= student.vp_id %></td>
    <td><%= student.father_name %></td>
    <td><%= student.date_of_birth %></td>
    <td><%= student.email %></td>
    <td><%= student.pmt_address_line1 %></td>
    <td><%= student.pmt_address_line2 %></td>
    <td><%= student.pmt_landmark %></td>
    <td><%= student.pmt_city %></td>
    <td><%= student.pmt_state %></td>
    <td><%= student.pmt_country %></td>
    <td><%= student.pmt_pincode %></td>
    <td><%= student.pmt_full_address %></td>
    <td><%= student.cur_address_line1 %></td>
    <td><%= student.cur_address_line2 %></td>
    <td><%= student.cur_landmark %></td>
    <td><%= student.cur_city %></td>
    <td><%= student.cur_state %></td>
    <td><%= student.cur_country %></td>
    <td><%= student.cur_pincode %></td>
    <td><%= student.cur_full_address %></td>
    <td><%= student.primary_phone %></td>
    <td><%= student.additional_phone %></td>
    <td><%= student.father_occupation %></td>
    <td><%= student.mother_occupation %></td>
    <td><%= student.total_family_income %></td>
    <td><%= student.gender %></td>
    <td><%= student.area_type %></td>
    <td><%= student.caste %></td>
    <td><%= student.category %></td>
    <td><%= student.studied_medium %></td>
    <td><%= student.sslc_percentage %></td>
    <td><%= student.comments %></td>
    <% if can? :update, Student %>
      <td>
        <%= link_to 'Edit', edit_student_path(student) %>
        <% if can? :destroy, Student %>
          | <%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

