<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Official Information</legend>
    <div class="field">
      <%= f.label :district %>
      <%= f.collection_select :district,
      		StudentDistrict.all(:order => 'district'),
      		:district, :district,
      		:prompt => "Select District", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :taluka %>
      <%= f.collection_select :taluka,
      		StudentTaluka.all(:order => 'taluka'),
      		:taluka, :taluka,
      		:prompt => "Select Taluka", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "VP ID" %>
      <%= f.text_field :vp_id %>
    </div>
    <div class="field">
      <%= f.label "House Visited By" %>
      <%= f.text_field :house_visited_by %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Personal Information</legend>
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :gender %>
      Boy
      <%= f.radio_button :gender, "Boy" %>
      Girl
      <%= f.radio_button :gender, "Girl" %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :date_of_birth %>
      <%= f.date_select :date_of_birth, :start_year => Time.now.year - 30, :end_year => Time.now.year,
          :order => [:day, :month, :year],
          :prompt => true %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Parental Information</legend>
    <div class="field">
      <%= f.label :father_name %>
      <%= f.text_field :father_name %>
    </div>
    <div class="field">
      <%= f.label :father_occupation %>
      <%= f.collection_select :father_occupation,
          StudentParentOccupation.all(:order => 'occupation_name'),
          :occupation_name, :occupation_name,
          :prompt => "Select Father's Occupation", :include_blank => true %>
    </div><br />
    <div class="field">
      <%= f.label :mother_occupation %>
      <%= f.collection_select :mother_occupation,
          StudentParentOccupation.all(:order => 'occupation_name'),
          :occupation_name, :occupation_name,
          :prompt => "Select Mother's Occupation", :include_blank => true %>
    </div><br />
    <div class="field">
      <%= f.label "Total Income" %>
      <%= f.text_field :total_family_income %>
    </div>
    <div class="field">
      <%= f.label "Account #" %>
      <%= f.text_field :account_number %>
    </div>
    <div class="field">
      <%= f.label "ATM #" %>
      <%= f.text_field :atm_number %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Additional Information</legend>
    <div class="field">
      <%= f.label :area_type %>
      <%= f.collection_select :area_type,
          StudentAreaType.all(:order => 'area_type_name'),
          :area_type_name, :area_type_name,
          :prompt => "Select Area Type", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :caste %>
      <%= f.collection_select :caste,
          StudentCaste.all, :caste_name, :caste_name,
          :prompt => "Select Caste", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :category %>
      <%= f.collection_select :category,
          StudentCategory.all, :category_name, :category_name,
          :prompt => "Select Category", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :studied_medium %>
      <%= f.collection_select :studied_medium,
          StudentStudyMed.all(:order => 'medium_name'),
          :medium_name, :medium_name,
          :prompt => "Select Study Medium", :include_blank => true %>
    </div><br />
    <div class="field">
      <%= f.label "SSLC %age" %>
      <%= f.text_field :sslc_percentage %>
    </div>
    <div class="field">
      <%= f.label "CET Rank" %>
      <%= f.text_field :cet_rank %>
    </div>
    <div class="field">
      <%= f.label "Exam Ticket #" %>
      <%= f.text_field :exam_ticket_number %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Permanent Address</legend>
    <div class="field">
      <%= f.label "Line 1" %>
      <%= f.text_field :pmt_address_line1 %>
    </div>
    <div class="field">
      <%= f.label "Line 2" %>
      <%= f.text_field :pmt_address_line2 %>
    </div>
    <div class="field">
      <%= f.label "Landmark" %>
      <%= f.text_field :pmt_landmark %>
    </div>
    <div class="field">
      <%= f.label "City" %>
      <%= f.collection_select :pmt_city,
      		City.all(:order => 'city_name'),
      		:city_name, :city_name,
      		:prompt => "Select City", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "State" %>
      <%= f.collection_select :pmt_state,
      		State.all(:order => 'state_name'),
      		:state_name, :state_name,
      		:prompt => "Select State", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "Country" %>
      <%= f.collection_select :pmt_country,
      		Country.all(:order => 'country_name'),
      		:country_name, :country_name,
      		:prompt => "Select Country", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "Pincode" %>
      <%= f.text_field :pmt_pincode %>
    </div>
    <div class="field">
      <%= f.label "Full Address (Import case)" %>
      <%= f.text_area :pmt_full_address %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Current Address</legend>
    <div class="field">
      <%= f.label "Line 1" %>
      <%= f.text_field :cur_address_line1 %>
    </div>
    <div class="field">
      <%= f.label "Line 2" %>
      <%= f.text_field :cur_address_line2 %>
    </div>
    <div class="field">
      <%= f.label "Landmark" %>
      <%= f.text_field :cur_landmark %>
    </div>
    <div class="field">
      <%= f.label "City" %>
      <%= f.collection_select :cur_city,
      		City.all(:order => 'city_name'),
      		:city_name, :city_name,
      		:prompt => "Select City", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "State" %>
      <%= f.collection_select :cur_state,
      		State.all(:order => 'state_name'),
      		:state_name, :state_name,
      		:prompt => "Select State", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "Country" %>
      <%= f.collection_select :cur_country,
      		Country.all(:order => 'country_name'),
      		:country_name, :country_name,
      		:prompt => "Select Country", :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label "Pincode" %>
      <%= f.text_field :cur_pincode %>
    </div>
    <div class="field">
      <%= f.label "Full Address (Import Case)" %>
      <%= f.text_area :cur_full_address %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Contact Information</legend>
    <div class="field">
      <%= f.label :primary_phone %>
      <%= f.text_field :primary_phone %>
    </div><br />
    <div class="field">
      <%= f.label :additional_phone %>
      <%= f.text_field :additional_phone %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Import Information</legend>
    <div class="field">
      <%= f.label "Ser No" %>
      <%= f.text_field :ser_no %>
    </div>
    <div class="field">
      <%= f.label :last_year_donor %>
      <%= f.text_field :last_year_donor %>
    </div><br />
    <div class="field">
      <%= f.label :present_year_donor %>
      <%= f.text_field :present_year_donor %>
    </div>
  </fieldset>

  <fieldset>
  <legend>Comments</legend>
    <div class="field">
      <%= f.text_area :comments %>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

