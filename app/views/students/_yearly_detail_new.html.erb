      <ul>
      <% yearly_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
<legend> Add New Yearly Detail</legend>
  <%= f.hidden_field :student_id %>
  <div class="field">
    <%= f.label "Details for Year" %><br />
    <%= f.select(:year, %w{2007 2008 2009 2010 2011 2012 2013 2014 2015 2016 2017 2018}) %>
  </div>
  <div class="field">
    <%= f.label "College Name" %><br />
    <%= f.text_field :coll_name %>
  </div>
  <div class="field">
    <%= f.label "College Phone" %><br />
    <%= f.text_field :coll_primary_phone %>
  </div>
  <div class="field">
    <%= f.label "Result Aggregate %" %><br />
    <%= f.text_field :result_aggregate %>
  </div>
  <div class="field">
    <%= f.label :amount_total %><br />
    <%= f.text_field :amount_total %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit "Add Yearly Details" %>
  </div>
<% end %>
</fieldset>

