<h1>STUDENT SEARCH RESULTS</h1>
<%= link_to 'Export to EXCEL', search_results_students_path(request.parameters.merge({:format => :xls})) %>
<br />
<% if current_user.role == "super_admin" %>
  QUERY: <%= @students.to_sql %>
<% end %>
<hr />

<table id="donations">
  <tr>
    <th>District</th>
    <th>Taluka</th>
    <th>VP ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Total family income</th>
    <th>Gender</th>
    <th>Area type</th>
    <th>Caste</th>
    <th>Category</th>
    <th>Studied medium</th>
    <th>SSLC %age</th>
    <th>Actions</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.district %></td>
    <td><%= student.taluka %></td>
    <td><%= student.vp_id %></td>
    <td><%= link_to "#{student.first_name} #{student.last_name}", student %></td>
    <td><%= student.email %></td>
    <td><%= student.total_family_income %></td>
    <td><%= student.gender %></td>
    <td><%= student.area_type %></td>
    <td><%= student.caste %></td>
    <td><%= student.category %></td>
    <td><%= student.studied_medium %></td>
    <td><%= student.sslc_percentage %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %> | <%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

